# OpenClaw Environment Variables
# Managed by Ansible - do not edit manually

# Docker Compose volume mounts and container config
OPENCLAW_CONFIG_DIR={{ openclaw_config_dir }}
OPENCLAW_WORKSPACE_DIR={{ openclaw_install_dir }}/workspace

# Gateway auth (used by docker-compose.yml)
OPENCLAW_GATEWAY_TOKEN={{ _openclaw_auth_token }}

# API keys
ANTHROPIC_API_KEY={{ openclaw_anthropic_api_key }}
{% if openclaw_openai_api_key %}
OPENAI_API_KEY={{ openclaw_openai_api_key }}
{% endif %}

# Session keys (populated by onboarding/integrations)
CLAUDE_AI_SESSION_KEY={{ openclaw_claude_ai_session_key | default('') }}
CLAUDE_WEB_SESSION_KEY={{ openclaw_claude_web_session_key | default('') }}
CLAUDE_WEB_COOKIE={{ openclaw_claude_web_cookie | default('') }}

# Auth token (used by openclaw.json config)
OPENCLAW_AUTH_TOKEN={{ _openclaw_auth_token }}
{% if openclaw_disable_bonjour %}
OPENCLAW_DISABLE_BONJOUR=1
{% endif %}
